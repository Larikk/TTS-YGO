<Defaults>
    <Panel class="window" color="#ecf0f1" height="16%" width="16%"/>

    <HorizontalLayout class="search-container" color="#2c3e50" padding="20" spacing="60" childForceExpandWidth="false" flexibleHeight="0"/>
    <Text class="search-label" fontSize="30" fontStyle="bold" flexibleWidth="0" color="#ecf0f1"/>
    <InputField class="search-field" fontSize="30" minWidth="500" minHeight="50" onValueChanged="searchThroughPacks"/>

    <VerticalLayout class="invisible" color="rgba(1,1,1,0)"/>
    <HorizontalLayout class="invisible" color="rgba(1,1,1,0)"/>
    <GridLayout class="invisible" color="rgba(1,1,1,0)"/>
    <VerticalScrollView class="invisible" color="rgba(1,1,1,0)" scrollSensitivity="0"/>

    <VerticalScrollView scrollbarBackgroundColor="#2c3e50"/>

    <VerticalLayout class="pack-page" childForceExpandHeight="false" />
    <VerticalLayout class="pack-section-container" padding="0 0 10 20"/>
    <GridLayout class="pack-section" childAlignment="UpperLeft" padding="8 8 8 8" spacing="8 8" cellsize="300 400"/>
    <Text class="pack-section" fontSize="100" fontStyle="bold"/>
    <Button class="pack-button" colors="#2980b9|#3498db|#2980b9|grey"/>
    <VerticalLayout class="pack-button" padding="8"/>
    <Image class="pack-image" padding="10" rectAlignment="MiddleCenter" preserveAspect="true"/>
    <Text class="pack-name" color="#ecf0f1" minHeight="80" fontSize="30" fontStyle="bold"/>
</Defaults>

<Panel class="window" active="true">
    <VerticalLayout childForceExpandHeight="false">
        <VerticalLayout id="page-container">
            <Text text="Loading..." fontSize="100" fontStyle="bold"/>
        </VerticalLayout>
        <Text fontSize="100">Placeholder</Text>
    </VerticalLayout>
</Panel>
