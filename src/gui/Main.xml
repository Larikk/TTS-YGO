<Defaults>
    <!-- Color scheme: https://flatuicolors.com/palette/defo-->
    <!-- General stuff -->
    <Panel class="window" color="#ecf0f1" height="16%" width="16%" position="0 0 -1"/>
    <HorizontalLayout class="nav-bar" color="#2c3e50" padding="20" spacing="20" childForceExpandWidth="false" flexibleHeight="0"/>
    <Text class="nav-bar" fontSize="45" fontStyle="bold" color="#ecf0f1" flexibleWidth="1" alignment="MiddleLeft"/>
    <VerticalLayout class="page" childForceExpandHeight="false" />

    <VerticalScrollView scrollbarBackgroundColor="#2c3e50"/>
    <GridLayout class="invisible" color="rgba(1,1,1,0)"/>
    <VerticalLayout class="invisible" color="rgba(1,1,1,0)"/>
    <VerticalScrollView class="invisible" color="rgba(1,1,1,0)" scrollSensitivity="0"/>

    <HorizontalLayout class="button-bar" padding="40" spacing="20" color="#2c3e50" childForceExpandHeight="false" />
    <Button class="button-bar" onClick="switchPage" minHeight="100" fontSize="30" fontStyle="bold" colors="#7f8c8d|#95a5a6|#95a5a6|#c0392b" textColor="#ecf0f1"/>

    <!-- Pack page -->
    <Text class="search-label" flexibleWidth="0"/>
    <InputField class="search-field" fontSize="30" minWidth="500" minHeight="50" onValueChanged="searchThroughPacks"/>

    <VerticalLayout class="pack-section-container" padding="0 0 10 20"/>
    <GridLayout class="pack-section" childAlignment="UpperLeft" padding="8 8 8 8" spacing="8 8" cellsize="300 400"/>
    <Text class="pack-section" fontSize="100" fontStyle="bold"/>
    <Button class="pack-button" colors="#2980b9|#3498db|#2980b9|grey"/>
    <VerticalLayout class="pack-button" padding="8"/>
    <Image class="pack-image" padding="10" rectAlignment="MiddleCenter" preserveAspect="true"/>
    <Text class="pack-name" color="#ecf0f1" minHeight="80" fontSize="30" fontStyle="bold"/>

    <!-- General stuff for pages -->
    <VerticalLayout class="page-body" childForceExpandHeight = "false" padding = "20" spacing="40"/>
    <VerticalLayout class="box" childForceExpandHeight="false" padding="40" spacing="20" color="#ecf0f1" outline="black" outlineSize="5"/>
    <Text class="box-title" fontSize="60" fontStyle="bold" alignment="MiddleLeft" />
    <Text class="box-description" fontSize="40" fontStyle="bold" alignment="MiddleLeft" />
    <Button class="button" minHeight="50" minwidth="150" flexibleHeight="0" fontSize="30" fontStyle="bold" />
    <Button class="red" textColor="#ecf0f1" colors="#c0392b|#e74c3c|#e74c3c|grey"/>
    <Button class="green" textColor="#ecf0f1" colors="#27ae60|#2ecc71|#2ecc71|grey"/>

    <!-- Deck import page -->
    <InputField class="deck-input" lineType = "MultiLineNewline" fontSize="30" flexibleHeight="1" />
    <HorizontalLayout class="deck-import-button" childForceExpandHeight="false" />

    <!-- Settings page -->
    <InputField class="settings-textfield" onValueChanged="onSettingChange" minHeight="70" minWidth="200" fontSize="40" alignment="MiddleRight" characterValidation="Decimal" flexibleWidth="1"/>
    <HorizontalLayout class="position-row" childForceExpandHeight="false" childForceExpandWidth="false" spacing="0"/>
    <Text class="position-row" fontSize="40" fontStyle="bold"/>
</Defaults>

<Panel class="window" active="true">
    <VerticalLayout childForceExpandHeight="false">
        <VerticalLayout id="page-container">
            <Text text="Loading..." fontSize="100" fontStyle="bold"/>
        </VerticalLayout>
        <HorizontalLayout class="button-bar">
            <Button id="spawnPackButton" class="button-bar">Spawn Packs</Button>
            <Button id="importDeckButton" class="button-bar">Import Deck</Button>
            <Button id="settingsButton" class="button-bar">Settings</Button>
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
