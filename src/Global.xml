<Defaults>
    <Panel class="TankChessPanel"  color="#8F8478" outline="#635351" outlineSize="2 -2"/>
    <Button class="mapButton" padding="0 0 145 0" textColor="#FFFFFF" colors="#AD9F91|#C9B9A9|#756C63|rgba(0.78,0.78,0.78,0.5)"/>
    <Image class="mapImage" width="77" height="144" rectAlignment="UpperCenter" offsetXY="0 -3" type="Simple" />
</Defaults>

<Panel id="packSelectionWindow" class="TankChessPanel"
    width="680"
    height="500"
    rectAlignment="UpperCenter"
    offsetXY="0 -250"
    allowDragging="true"
    showAnimation="FadeIn"
    showAnimationDelay="2"
    returnToOriginalPositionWhenReleased="false">
    <VerticalScrollView
        rectAlignment="LowerCenter"
        offsetXY="0 -00"
        scrollSensitivity="40"
        padding="0 0 50 0"
        scrollbarColors="#AD9F91|#C9B9A9|#756C63|rgba(0.78,0.78,0.78,0.5)"
        width="680"
        height="480"
        color="#DDDDDD">
        <!--Panel height="1000" rectAlignment="UpperCenter"-->
        <GridLayout padding="0 0 8 3" spacing="8 8"  height="1400"
            cellsize="150 190" childAlignment="UpperCenter">
                <Button class="mapButton" onClick="spawnLOB" text="Legend of Blue Eyes White Dragon">
                    <Image class="mapImage" image="LOB" />
                </Button>
                <Button class="mapButton" onClick="spawnMRD" text="Starter Game 20x20">
                    <Image class="mapImage" image="LOB" />
                </Button>
                <Button class="mapButton" onClick="noop" text="Legend of Blue Eyes White Dragon">
                    <Image class="mapImage" image="LOB" />
                </Button>
                <Button class="mapButton" onClick="noop" text="Starter Game 20x20">
                    <Image class="mapImage" image="LOB" />
                </Button>
                <Button class="mapButton" onClick="noop" text="Legend of Blue Eyes White Dragon">
                    <Image class="mapImage" image="LOB" />
                </Button>
                <Button class="mapButton" onClick="noop" text="Starter Game 20x20">
                    <Image class="mapImage" image="LOB" />
                </Button>
        </GridLayout>
    <!--/Panel-->
    </VerticalScrollView>
    <Button id="closeButton"
        width="20"
        height="20"
        rectAlignment="UpperRight"
        color="#990000"
        textColor="#FFFFFF"
        text="X"
        onClick="hidePackWindow">
    </Button>
    <Text text="Choose a pack" alignment="UpperLeft" fontSize="18" offsetXY="5 0"
        fontStyle="Bold" color="#FFFFFF"></Text>
</Panel>

<!-- Cleanup/Show Maps button -->
<Panel id="packSelectionButton" class="TankChessPanel"
    rectAlignment="UpperRight"
    active="false"
    offsetXY="0 -50"
    raycastTarget="true"
    width="100"
    height="50"
    allowDragging="true"
    padding="3 3 10 3"
    showAnimation="FadeIn"
    showAnimationDelay="2"
    returnToOriginalPositionWhenReleased="false">
    <Button id="packSelectionButton"
        text="Spawn Packs"
        onClick="showPackWindow">
    </Button>
</Panel>
